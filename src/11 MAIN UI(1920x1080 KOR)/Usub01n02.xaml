<UserControl x:Class="EGGPLANT.Usub01n02"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:EGGPLANT._12_SUB_UI"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Stage X -->
            <Border Grid.Column="0" Grid.Row="0">
                <uc:AxisWaypointList x:Name="XAxisList"></uc:AxisWaypointList>
            </Border>

            <!-- Stage Y -->
            <Border Grid.Column="1" Grid.Row="0">
                <uc:AxisWaypointList x:Name="YAxisList"></uc:AxisWaypointList>
            </Border>

            <!-- Stage Z -->
            <Border Grid.Column="2" Grid.Row="0">
                <uc:AxisWaypointList x:Name="ZAxisList"></uc:AxisWaypointList>
            </Border>

            <!-- 변위 센서 1 -->
            <Border Grid.Column="0" Grid.Row="1">
                <uc:DisplacementControl></uc:DisplacementControl>
            </Border>

            <!-- 변위 센서 2 -->
            <Border Grid.Column="0" Grid.Row="2">
                <uc:DisplacementControl></uc:DisplacementControl>
            </Border>

            <!-- 변위 센서 3 -->
            <Border Grid.Column="0" Grid.Row="3">
                <uc:DisplacementControl></uc:DisplacementControl>
            </Border>

            <!-- 모터 상태 -->
            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <uc:MoterStateControl x:Name="XMotorState" Grid.Column="0"></uc:MoterStateControl>
                    <uc:MoterStateControl x:Name="YMotorState" Grid.Column="1"></uc:MoterStateControl>
                    <uc:MoterStateControl x:Name="ZMotorState" Grid.Column="2"></uc:MoterStateControl>
                </Grid>


            </Border>

            <!-- 수동 조작 -->
            <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
                
                <uc:ManualOperation ></uc:ManualOperation>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
