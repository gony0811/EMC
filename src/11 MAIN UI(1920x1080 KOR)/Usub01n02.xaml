<UserControl x:Class="EGGPLANT.USub01n02"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:EGGPLANT"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Border" x:Key="Section">
                <Setter Property="BorderBrush" Value="{StaticResource MahApps.Brushes.Accent}"></Setter>
                <Setter Property="BorderThickness" Value=".5"></Setter>
                <Setter Property="CornerRadius" Value="5"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto"
              CanContentScroll="False">
        <Grid Margin="12"
            MinWidth="1600"  
            MinHeight="900">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- AxisWaypointList 묶음 -->
                <RowDefinition Height="Auto"/>
                <!-- 변위1 -->
                <RowDefinition Height="Auto"/>
                <!-- 변위2 -->
                <RowDefinition Height="Auto"/>
                <!-- 변위3 -->
                <RowDefinition Height="Auto"/>
                <!-- 모터 상태(두 줄로 잡아도 Auto면 OK) -->
                <RowDefinition Height="Auto"/>
                <!-- 수동 조작 -->
            </Grid.RowDefinitions>

            <!-- Stage X/Y/Z (제목/헤더 포함해서 자체 높이만큼 Auto) -->
            <GroupBox Grid.Column="0" Grid.Row="0" Margin="6" Header="X">
                <uc:AxisWaypointList x:Name="XAxisList"/>
            </GroupBox>
            <GroupBox Grid.Column="1" Grid.Row="0" Margin="6"  Header="Y">
                <uc:AxisWaypointList x:Name="YAxisList"/>
            </GroupBox>
            <GroupBox Grid.Column="2" Grid.Row="0" Margin="6"  Header="Z">
                <uc:AxisWaypointList x:Name="ZAxisList"/>
            </GroupBox>

            <!-- 변위 센서 1/2/3 -->
            <Border Grid.Column="0" Grid.Row="1" Margin="6" Style="{StaticResource Section}">
                <uc:DisplacementControl x:Name="Displacement1"/>
            </Border>
            <Border Grid.Column="0" Grid.Row="2" Margin="6" Style="{StaticResource Section}">
                <uc:DisplacementControl x:Name="Displacement2"/>
            </Border>
            <Border Grid.Column="0" Grid.Row="3" Margin="6" Style="{StaticResource Section}">
                <uc:DisplacementControl x:Name="Displacement3"/>
            </Border>

            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Margin="6" Style="{StaticResource Section}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <uc:MotorStateControl x:Name="XMotorState" Grid.Column="0" Margin="4"/>
                    <uc:MotorStateControl x:Name="YMotorState" Grid.Column="1" Margin="4"/>
                    <uc:MotorStateControl x:Name="ZMotorState" Grid.Column="2" Margin="4"/>
                </Grid>
            </Border>

            <!-- 수동 조작 -->
            <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" Margin="6" Style="{StaticResource Section}">
                <uc:ManualOperation/>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
