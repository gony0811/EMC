<Page x:Class="EGGPLANT.USub01"
      Style="{DynamicResource MahApps.Styles.Page}"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="USub01">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="현재 디바이스" 
                       Style="{DynamicResource MahApps.Styles.Button.Flat}"
                       IsEnabled="True"
                       IsHitTestVisible="False"
                       FontSize="24"
                       Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Margin="1"/>

            <Button x:Name="tbCurrentDevice"
                       Content="{Binding CurrentDevice}"         
                       Style="{DynamicResource MahApps.Styles.Button.Flat}"
                       IsEnabled="True"
                       IsHitTestVisible="False"
                       FontSize="24"
                       Grid.Column="1" 
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center" 
                       Margin="1"/>
        </Grid>
        
        <!-- Tab Panel-->
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 콘텐츠 영역 -->
                <Frame x:Name="ContentFrame"
           Grid.Column="0"
           NavigationUIVisibility="Hidden"/>

                <!-- 탭 패널 -->
                <StackPanel x:Name="TabPanel" Grid.Column="1" Orientation="Vertical">
                    <ToggleButton Tag="Tab1"
                    Checked="Tab_Checked"
                    Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"
                    Width="150" Height="150" Margin="0 1 0 1">
                        <StackPanel>
                            <TextBlock Text="TAB1" FontSize="24" TextAlignment="Center"/>
                            <TextBlock Text="(MAIN)" FontSize="24" TextAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton Tag="Tab2"
                    Checked="Tab_Checked"
                    Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"
                    Width="150" Height="150" Margin="0 1 0 1">
                        <StackPanel>
                            <TextBlock Text="TAB2" FontSize="24" TextAlignment="Center"/>
                            <TextBlock Text="(LDS)" FontSize="24" TextAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton Tag="Tab3"
                    Checked="Tab_Checked"
                    Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"
                    Width="150" Height="150" Margin="0 1 0 1">
                        <StackPanel>
                            <TextBlock Text="TAB3" FontSize="24" TextAlignment="Center"/>
                            <TextBlock Text="VISION" FontSize="24" TextAlignment="Center"/>
                            <TextBlock Text="2X" FontSize="24" TextAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton Tag="Tab4"
                    Checked="Tab_Checked"
                    Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"
                    Width="150" Height="150" Margin="0 1 0 1">
                        <StackPanel>
                            <TextBlock Text="TAB4" FontSize="24" TextAlignment="Center"/>
                            <TextBlock Text="VISION" FontSize="24" TextAlignment="Center"/>
                            <TextBlock Text="15X" FontSize="24" TextAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Grid>


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--LOG LIST-->
                <ColumnDefinition Width="Auto"/>
                <!--INIT/RUN/STOP/RESET BUTTON-->
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Button Grid.Row="0" Style="{DynamicResource MahApps.Styles.Button.Flat}" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Left" 
                        IsHitTestVisible="False" 
                        Content="LOG" 
                        FontSize="18"
                        Margin="1"
                        />
                <ListBox Grid.Row="1" x:Name="tbLogView" Style="{DynamicResource MahApps.Styles.ListBox}" 
                             ItemsSource="{Binding TraceLog}"
                             FontSize="14"
                             FontWeight="Bold"
                             Foreground="{DynamicResource MahApps.Brushes.IdealForeground}"
                             Background="{DynamicResource MahApps.Brushes.Control.Background}"
                             HorizontalAlignment="Stretch"
                             HorizontalContentAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Height="150" Margin="1 1 1 1">
                </ListBox>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Style="{DynamicResource MahApps.Styles.Button}" VerticalAlignment="Stretch" Margin="1 1 1 1"
                        Command="{Binding InitializeCommand}"
                        >
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="INITIALIZE" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(ALL HOME)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" Style="{DynamicResource MahApps.Styles.Button}" VerticalAlignment="Stretch" Margin="0 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="시 작" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(START)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2" Grid.Row="0" Style="{DynamicResource MahApps.Styles.Button}" VerticalAlignment="Stretch" Margin="0 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="정 지" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(STOP)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3" Grid.Row="0" Style="{DynamicResource MahApps.Styles.Button}" VerticalAlignment="Stretch" Margin="0 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="리 셋" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(RESET)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Style="{DynamicResource MahApps.Styles.Button}" VerticalAlignment="Stretch" Margin="0 0 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="공정 Step 초기화" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3" Grid.Row="1" Style="{DynamicResource MahApps.Styles.Button}" VerticalAlignment="Stretch" Margin="0 0 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="최근 에러 보기" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
