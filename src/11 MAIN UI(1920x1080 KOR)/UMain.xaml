<mah:MetroWindow x:Class="EGGPLANT.UMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGGPLANT"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="UMain" Height="Auto" Width="Auto" ResizeMode="CanResizeWithGrip" WindowStyle="ThreeDBorderWindow">
    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </mah:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource MahApps.Brushes.Badged.Background}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Style="{DynamicResource MahApps.Styles.Button}" Grid.Column="0" Content="LOGO" Width="150" Height="60" Margin="5"/>
                <WrapPanel  Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="3">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" Text="THREAD :"/>
                        <TextBlock Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" x:Name="tbThread" Text="{Binding ThreadText}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" Text="TIME :"/>
                        <TextBlock  Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" x:Name="tbTime" Text="{Binding TimeText}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" Text="LOG IN LEVEL :"/>
                        <TextBlock  Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" x:Name="tbUser" Text="{Binding UserText}" VerticalAlignment="Center"/>
                    </StackPanel>
                </WrapPanel>

                <TextBlock  Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" Grid.Column="3" x:Name="tbStatus" Text="{Binding StatusText}" FontSize="36" VerticalAlignment="Center" Width="Auto" TextAlignment="Center"/>
                <WrapPanel Grid.Column="4" Orientation="Vertical" VerticalAlignment="Center" Margin="3">
                    <TextBlock Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" x:Name="tbBuild" Text="{Binding BuildText}" TextAlignment="Right"/>
                    <TextBlock Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" x:Name="tbDeveloper" Text="{Binding DeveloperText}" TextAlignment="Right"/>
                    <TextBlock Style="{DynamicResource MahApps.Styles.TextBlock.AutoCollapsing}" x:Name="tbSerialNumber" Text="{Binding SerialNumberText}" TextAlignment="Right"/>
                </WrapPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        
           

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}" 
                              x:Name="Main" MinHeight="80" MinWidth="120" 
                              
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsMainChecked}" Tag="MAIN">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Monitor" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="메인" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"  
                        x:Name="Parameter" MinHeight="80" MinWidth="120"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsEnabled="{Binding UseParam}"
                              IsChecked="{Binding IsParamChecked}" Tag="PARAM">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Table" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="파라미터" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"   
                        x:Name="User" MinHeight="80" MinWidth="120"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsUserChecked}" Tag="USER">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Human" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="사용자" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"   
                        x:Name="Log" MinHeight="80" MinWidth="120"  
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsEnabled="{Binding UseLog}"
                              IsChecked="{Binding IsLogChecked}" Tag="LOG">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="ChartHistogram" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="로그" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"   
                        x:Name="Error" MinHeight="80" MinWidth="120" 
                              IsEnabled="{Binding UseError}"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsErrorChecked}" Tag="ERROR">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Alert" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="에러" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"  
                        x:Name="Manual" MinHeight="80" MinWidth="120" 
                              IsEnabled="{Binding UseManual}"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsManualChecked}" Tag="MANUAL">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Controller" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="수동조작" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"  
                        x:Name="Motion" MinHeight="80" MinWidth="120" 
                              IsEnabled="{Binding UseMotion}"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsMotionChecked}" Tag="MOTION">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Motion" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="모터제어" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"  
                        x:Name="Sensor" MinHeight="80" MinWidth="120" 
                              IsEnabled="{Binding UseDirectIO}"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsDirectIOChecked}" Tag="SENSOR">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Wifi" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="센서" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}"  
                        x:Name="SignalTower" MinHeight="80" MinWidth="120" 
                              IsEnabled="{Binding UseTowerLamp}"
                              Command="{Binding NavigateClickCommand}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}" 
                              IsChecked="{Binding IsTowerLampChecked}" Tag="TOWERLAMP">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Lightbulb" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="경광등" TextAlignment="Center"/>
                    </StackPanel>
                </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <Button Style="{DynamicResource MahApps.Styles.Button.MetroWindow.Dark}" x:Name="Exit" MinHeight="80" MinWidth="120">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="ExitToApp" Width="24" Height="24" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <TextBlock Text="종료" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!--Main Navigation Toolbar-->
      
        
    </Grid>
</mah:MetroWindow>
