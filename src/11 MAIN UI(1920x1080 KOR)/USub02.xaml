<Page x:Class="EGGPLANT.USub02"
      Style="{DynamicResource MahApps.Styles.Page}"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="USub02">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="현재 디바이스" 
                       Style="{DynamicResource MahApps.Styles.TextBlock}" 
                       FontSize="24"
                       Grid.Column="0" 
                       MinWidth="200"
                       VerticalAlignment="Center" 
                       TextAlignment="Center"
                       Margin="10,0,0,0"/>

                <TextBlock x:Name="tbCurrentDevice"
                       Text="{Binding CurrentDevice}" 
                       Style="{DynamicResource MahApps.Styles.TextBlock}" 
                       FontSize="24"
                       Grid.Column="1"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center" 
                       TextAlignment="Center"    
                       Margin="10,0,0,0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
            </Grid>


            <Border Grid.Row="1" 
                Margin="10" 
                Background="{DynamicResource MahApps.Brushes.Badged.Background}" 
                BorderBrush="{DynamicResource MahApps.Brushes.Badged.Border}" 
                BorderThickness="1"/>
        </Grid>
    </Grid>
</Page>
