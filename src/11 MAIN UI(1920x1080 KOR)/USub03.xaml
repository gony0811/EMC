<Page x:Class="EGGPLANT._11_MAIN_UI_1920x1080_KOR_.USub03"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT._11_MAIN_UI_1920x1080_KOR_"
      mc:Ignorable="d"
      xmlns:uc="clr-namespace:EGGPLANT._12_SUB_UI"
      Title="USub03">
    <!-- 사용자 화면 -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="사용자 설정"/>
            </Border>

            <Border Grid.Column="0" Grid.Row="1" BorderBrush="#0767B3" BorderThickness="1" CornerRadius="5" Margin="10" Width="250">

                <StackPanel>
                    <Border Background="#0767B3"  
                    CornerRadius="5"
                    Margin="0,0,0,10"
                    Padding="5">
                        <TextBlock Text=" 사용자 선택"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"/>
                    </Border>
                    <Button Content="엔지니어(ENGINEER)" Height="40" FontWeight="DemiBold" Margin="0,0,0,10"></Button>
                    <Button Content="관리자(ADMINISTRATOR)" Height="40" FontWeight="DemiBold" Margin="0,0,0,10"></Button>
                    <Button Content="서비스 엔지니어(SERVICE ENGINEER)" Height="40" FontWeight="DemiBold" Margin="0,0,0,10"></Button>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="0" Grid.Row="0">
                                <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Center" CornerRadius="5" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="250">
                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="권한 설정(작업자)" Foreground="White" FontWeight="DemiBold" FontSize="16" TextAlignment="Left" Padding="10"></TextBlock>
                                        </Border>
                                        <uc:HeaderAction LabelText="파라미터 설정 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="파라미터 변경" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="로그 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="에러목록 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="수동조작 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>

                                        <uc:HeaderAction LabelText="모터 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="센서 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>

                                        <uc:HeaderAction LabelText="경광등 설정 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                                        HorizontalAlignment="Center" VerticalAlignment="Center"  
                                        Margin="0,0,10,0" MinWidth="250">
                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="권한 설정(엔지니어)" Foreground="White" FontWeight="DemiBold" FontSize="16" TextAlignment="Left" Padding="10"/>
                                        </Border>
                                        <uc:HeaderAction LabelText="파라미터 설정 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="파라미터 변경" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="로그 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="에러목록 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="수동조작 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>

                                        <uc:HeaderAction LabelText="모터 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="센서 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>

                                        <uc:HeaderAction LabelText="경광등 설정 화면" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="불가" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="0" Grid.Row="1">
                                <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Center" CornerRadius="5"  Margin="0,0,10,0" MinWidth="250">
                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="사용자 옵션" Foreground="White" FontWeight="DemiBold" FontSize="16" TextAlignment="Left" Padding="10"></TextBlock>
                                        </Border>
                                        <uc:HeaderAction LabelText="DOOR" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="사용" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="BUZZER" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="사용" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                        <uc:HeaderAction LabelText="테스트 모드" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="보정 능력 연속 측정" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Center" CornerRadius="5"   Margin="0,0,10,0" MinWidth="250">
                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="Service Engineer Option" Foreground="White" FontWeight="DemiBold" FontSize="16" TextAlignment="Left" Padding="10"></TextBlock>
                                        </Border>
                                        <uc:HeaderAction LabelText="드라이(IDLE)런" >
                                            <uc:HeaderAction.ActionContent>
                                                <Button Content="미사용" Command="{Binding SetPermissionCommand}"/>
                                            </uc:HeaderAction.ActionContent>
                                        </uc:HeaderAction>

                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <Border BorderBrush="#0767B3"  
                                    BorderThickness="1"
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                    Grid.Column="1" Grid.RowSpan="2"
                                    CornerRadius="5"
                                    Margin="10"
                                >
                                <StackPanel>
                                    <Border Background="#0767B3"  
                                            CornerRadius="5"
                                            Margin="0,0,0,10"
                                            Padding="5">
                                        <TextBlock Text=" 비밀번호 변경"
                                                   Foreground="White"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>    
                                    </Border>
                                    <Button Content="엔지니어 비밀번호 변경" Width="200" Height="60" Margin="10"></Button>
                                    <Button Content="관리자 비밀번호 변경" Width="200" Height="60" Margin="10"></Button>
                                </StackPanel>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
    
</Page>
