<Page x:Class="EGGPLANT.USub03"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT"
      mc:Ignorable="d"
      xmlns:uc="clr-namespace:EGGPLANT"
      Title="USub03">
    <!-- 사용자 화면 -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="사용자 설정"/>
            </Border>

            <Border Grid.Column="0" Grid.Row="1" BorderBrush="#0767B3" BorderThickness="1" CornerRadius="5" Margin="10" Width="250">

                <StackPanel>
                    <Border Background="#0767B3"  
                    CornerRadius="5"
                    Margin="0,0,0,10"
                    Padding="5">
                        <TextBlock Text=" 사용자 선택"
                     Foreground="White"
                     FontSize="16"
                     FontWeight="SemiBold"/>
                    </Border>
                    <Button Content="작업자" Height="40" FontWeight="DemiBold" Margin="0,0,0,10" Command="{Binding OperatorSelectCommand}"></Button>
                    <Button Content="엔지니어(ENGINEER)" Height="40" FontWeight="DemiBold" Margin="0,0,0,10" Command="{Binding EngineerSelectCommand}"></Button>
                    <Button Content="관리자(ADMINISTRATOR)" Height="40" FontWeight="DemiBold" Margin="0,0,0,10" Command="{Binding AdminSelectCommand}"></Button>
                    <Button Content="서비스 엔지니어(SERVICE ENGINEER)" Height="40" FontWeight="DemiBold" Margin="0,0,0,10" Command="{Binding SESelectCommand}"></Button>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="0" Grid.Row="0">
                               

                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Margin="0,0,10,0" MinWidth="250">

                                            <!-- ⬇️ 이 스타일이 핵심: 목록이 비면 섹션 전체를 감춤 -->
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasItems, ElementName=OperatorList}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <StackPanel>
                                                <Border>
                                                    <TextBlock Text="권한 설정(작업자)" Foreground="White"
                                                                 FontWeight="DemiBold" FontSize="16"
                                                                 TextAlignment="Left" Padding="10"/>
                                                </Border>

                                                <!-- 목록 -->
                                                <ItemsControl x:Name="OperatorList" ItemsSource="{Binding OperatorSettings}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <uc:HeaderAction LabelText="{Binding PermissionName}">
                                                                <uc:HeaderAction.ActionContent>
                                                                    <Button Command="{Binding DataContext.SetPermissionCommand,
                                                                            RelativeSource={RelativeSource AncestorType=Page}}"
                                                                            CommandParameter="{Binding}">
                                                                        <Button.Style>
                                                                            <Style TargetType="Button">
                                                                                <Setter Property="Content" Value="불가"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                                                        <Setter Property="Content" Value="허용"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Button.Style>
                                                                    </Button>
                                                                </uc:HeaderAction.ActionContent>
                                                            </uc:HeaderAction>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                        

                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Margin="0,0,10,0" MinWidth="250">

                                    <!-- ⬇️ 이 스타일이 핵심: 목록이 비면 섹션 전체를 감춤 -->
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasItems, ElementName=EngineerList}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="권한 설정(엔지니어)" Foreground="White"
                                                         FontWeight="DemiBold" FontSize="16"
                                                         TextAlignment="Left" Padding="10"/>
                                        </Border>

                                        <!-- 목록 -->
                                        <ItemsControl x:Name="EngineerList" ItemsSource="{Binding EngineerSettings}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <uc:HeaderAction LabelText="{Binding PermissionName}">
                                                        <uc:HeaderAction.ActionContent>
                                                            <Button Command="{Binding DataContext.SetPermissionCommand,
                                                                    RelativeSource={RelativeSource AncestorType=Page}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Content" Value="불가"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                                                <Setter Property="Content" Value="허용"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                            </Button>
                                                        </uc:HeaderAction.ActionContent>
                                                    </uc:HeaderAction>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="0" Grid.Row="1">
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5"
                                        HorizontalAlignment="Center" Margin="0,0,10,0" MinWidth="250">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasItems, ElementName=UserList}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="사용자 옵션" Foreground="White"
                                                         FontWeight="DemiBold" FontSize="16"
                                                         TextAlignment="Left" Padding="10"/>
                                        </Border>

                                        <ItemsControl x:Name="UserList" ItemsSource="{Binding UserSettings}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <uc:HeaderAction LabelText="{Binding PermissionName}">
                                                        <uc:HeaderAction.ActionContent>
                                                            <ToggleButton
                                                                            IsThreeState="False"
                                                                            IsChecked="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                            Command="{Binding DataContext.SetPermissionCommand,
                                                                                              RelativeSource={RelativeSource AncestorType=Page}}"
                                                                            CommandParameter="{Binding}">
                                                                <ToggleButton.Style>
                                                                    <Style TargetType="ToggleButton">
                                                                        <Setter Property="Content" Value="미사용"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter Property="Content" Value="사용"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </ToggleButton.Style>
                                                            </ToggleButton>
                                                        </uc:HeaderAction.ActionContent>
                                                    </uc:HeaderAction>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5"
                                        HorizontalAlignment="Center" Margin="0,0,10,0" MinWidth="250">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasItems, ElementName=ServiceEngineerList}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <Border>
                                            <TextBlock Text="서비스 엔지니어 옵션" Foreground="White"
                                                             FontWeight="DemiBold" FontSize="16"
                                                             TextAlignment="Left" Padding="10"/>
                                        </Border>

                                        <ItemsControl x:Name="ServiceEngineerList" ItemsSource="{Binding ServiceEngineerOptions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <uc:HeaderAction LabelText="{Binding PermissionName}">
                                                        <uc:HeaderAction.ActionContent>
                                                            <ToggleButton
                                                                            IsThreeState="False"
                                                                            IsChecked="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                            Command="{Binding DataContext.SetPermissionCommand,
                                                                                              RelativeSource={RelativeSource AncestorType=Page}}"
                                                                            CommandParameter="{Binding}">
                                                                <ToggleButton.Style>
                                                                    <Style TargetType="ToggleButton">
                                                                        <Setter Property="Content" Value="미사용"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter Property="Content" Value="사용"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </ToggleButton.Style>
                                                            </ToggleButton>
                                                        </uc:HeaderAction.ActionContent>
                                                    </uc:HeaderAction>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                            </StackPanel>

                            <Border BorderBrush="#0767B3"  
                                    BorderThickness="1"
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                    Grid.Column="1" Grid.RowSpan="2"
                                    CornerRadius="5"
                                    Margin="10"
                                >
                                <StackPanel>
                                    
                                    <Border Background="#0767B3"  
                                            CornerRadius="5"
                                            Margin="0,0,0,10"
                                            Padding="5">
                                        <TextBlock Text=" 비밀번호 변경"
                                                   Foreground="White"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>    
                                    </Border>
                                    <Button Content="엔지니어 비밀번호 변경" Width="200" Height="60" Margin="10" Click="OnEngineerChange"></Button>
                                    <Button Content="관리자 비밀번호 변경" Width="200" Height="60" Margin="10"></Button>
                                </StackPanel>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
    
</Page>
