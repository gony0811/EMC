<Page x:Class="EGGPLANT.USub03"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT"
      xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
      mc:Ignorable="d"
      xmlns:uc="clr-namespace:EGGPLANT"
      Title="USub03">
    <!-- 사용자 화면 -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:BoolToTextConverter x:Key="BoolToText"/>
            <local:BoolToBrushConverter x:Key="BoolToBrush"/>
            <local:NotConverter x:Key="Not"/>
            <DataTemplate x:Key="SwitchContentTemplate">
                <Border Margin="8,0" CornerRadius="8" Padding="8,2" Cursor="Hand"
                Background="{Binding Granted, Converter={StaticResource BoolToBrush},
                                      ConverterParameter='#4CAF50|#BDBDBD'}">
                    <TextBlock Text="{Binding Granted, Converter={StaticResource BoolToText},
                                       ConverterParameter='ON/OFF'}"
                     Foreground="White" FontWeight="SemiBold"/>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
        
    </Page.Resources>

    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="사용자 설정"/>
            </Border>

            <Border Grid.Column="0" Grid.Row="1" BorderBrush="#0767B3" BorderThickness="1" CornerRadius="5" Margin="10" Width="250">

                <StackPanel>
                    <Border Background="#0767B3"  
                            CornerRadius="5"
                            Padding="5">
                        <TextBlock Text=" 사용자 선택"
                                     Foreground="White"
                                     FontSize="16"
                                     FontWeight="SemiBold"/>
                    </Border>

                    <ItemsControl ItemsSource="{Binding UserVM.AuthorityList,
                            diag:PresentationTraceSources.TraceLevel=High}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Name}"
                                        Margin="10" Height="40" MinWidth="110"
                                        Command="{Binding DataContext.ChangeUserCommand,
                                                RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="1">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <!-- 화면 접근 설정 -->
                    <ItemsControl ItemsSource="{Binding UserVM.Groups}" Grid.Row="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <!-- 가로 한 줄 -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- 그룹(Expander) 카드 간격/정렬 -->
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="8,0,8,0"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:RoleScreensGroupVM}">
                                <!-- 고정(또는 Min) 너비를 주면 카드처럼 정렬이 깔끔합니다 -->
                                <Expander IsExpanded="True" Margin="0,0,0,8" Width="320">
                                    <Expander.Header>
                                        <TextBlock Text="{Binding RoleName}" FontWeight="Bold" FontSize="14"/>
                                    </Expander.Header>

                                    <!-- 각 그룹 내부는 기존처럼 세로 목록 -->
                                    <ItemsControl ItemsSource="{Binding Screens}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type local:ScreenItemVM}">
                                                <Grid Margin="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>

                                                    <Button Grid.Column="1"
                                            Style="{x:Null}"             
                                            Command="{Binding ToggleCommand}"
                                            IsEnabled="{Binding CanToggle}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            Focusable="False">
                                                        <Border Margin="8,0"
                                                CornerRadius="8"
                                                Padding="8,2"
                                                Cursor="Hand"
                                                Background="{Binding Granted, Converter={StaticResource BoolToBrush},
                                                                     ConverterParameter='#4CAF50|#BDBDBD'}">
                                                            <TextBlock Text="{Binding Granted, Converter={StaticResource BoolToText},
                                                                     ConverterParameter='ON|OFF'}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"/>
                                                        </Border>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal">
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
    
</Page>
