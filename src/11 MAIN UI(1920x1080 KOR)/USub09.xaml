<Page x:Class="EGGPLANT.USub09"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT._11_MAIN_UI_1920x1080_KOR_"
      xmlns:uc="clr-namespace:EGGPLANT._12_SUB_UI"
      xmlns:model="clr-namespace:EGGPLANT.Models"
      mc:Ignorable="d" 
      Title="USub09">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DefaultResource.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonsAndSwitches.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="경광등 제어"/>
            </Border>
            <GroupBox Header="모드 선택" 
               Style="{StaticResource TitledBox}" 
               Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
               Margin="10" Width="250">

                <StackPanel>
                    <Button Content="정지" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.STOP}" Height="40" FontWeight="DemiBold" Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.STOP}">
                                        <Setter Property="Background" Value="#0767B3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="초기화" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.INIT}" Height="40" FontWeight="DemiBold"  Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.INIT}">
                                        <Setter Property="Background" Value="#0767B3"/>

                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="대기" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.READY}" Height="40" FontWeight="DemiBold"  Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.READY}">
                                        <Setter Property="Background" Value="#0767B3"/>

                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="동작" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.START}" Height="40" FontWeight="DemiBold"  Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.START}">
                                        <Setter Property="Background" Value="#0767B3"/>

                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="정지 준비" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.STOP_READY}" Height="40" FontWeight="DemiBold"  Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.STOP_READY}">
                                        <Setter Property="Background" Value="#0767B3"/>

                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="알람 준비" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.ALARM_READY}" Height="40" FontWeight="DemiBold"  Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.ALARM_READY}">
                                        <Setter Property="Background" Value="#0767B3"/>

                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="알람" Command="{Binding SetModeCommand}" CommandParameter="{x:Static model:PowerLampMode.ALARM}" Height="40" FontWeight="DemiBold"  Margin="4,0,4,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="{x:Static model:PowerLampMode.ALARM}">
                                        <Setter Property="Background" Value="#0767B3"/>

                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </GroupBox>
            <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderBrush="DarkGray" BorderThickness="3" Width="200" Height="200">
                    <uc:PowerLamp State="{Binding TopPowerLamp}" OnBrush="#CF2F11" Command="{Binding TopPowerLampCycleCommand}"/>
                </Border>
                <Border BorderBrush="DarkGray" BorderThickness="3" Width="200" Height="200">
                    <uc:PowerLamp State="{Binding MiddlePowerLamp}" OnBrush="#FF8339" Command="{Binding MiddlePowerLampCycleCommand}"/>
                </Border>
                <Border BorderBrush="DarkGray" BorderThickness="3" Width="200" Height="200">
                    <uc:PowerLamp State="{Binding BottomPowerLamp}" OnBrush="#49BB17" Command="{Binding BottomPowerLampCycleCommand}"/>
                </Border>
                
                
            </StackPanel>
        </Grid>
    </Border>
</Page>
