<Page x:Class="EGGPLANT.USub07"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGGPLANT._11_MAIN_UI_1920x1080_KOR_"
      xmlns:uc="clr-namespace:EGGPLANT"
      xmlns:page="clr-namespace:EGGPLANT"
      mc:Ignorable="d" 
      Title="USub07">
    <!-- 모터 제어 화면 -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DefaultResource.xaml"/>
                <ResourceDictionary Source="/Styles/ButtonsAndSwitches.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="모터 제어"/>
            </Border>

            <GroupBox Header="모터 항목" 
                      Style="{StaticResource TitledBox}" 
                      Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
                      Margin="10" Width="250">
                <StackPanel>
                    <Button Content="1번 Y"  Height="40" Margin="4,0,4,10"></Button>
                    <Button Content="2번 X" Height="40" Margin="4,0,4,10"></Button>
                    <Button Content="3번 LOW X" Height="40" Margin="4,0,4,10"></Button>
                    <Button Content="3번 LOW X" Height="40" Margin="4,0,4,10"></Button>
                    <Button Content="4번 RESERVED" Height="40" Margin="4,0,4,10"></Button>
                    <Button Content="5번 Z" Height="40" Margin="4,0,4,10"></Button>
                </StackPanel>
            </GroupBox>
            <Border Grid.Column="1" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"></ColumnDefinition>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="위치" 
                              Grid.Column="0" 
                              Style="{StaticResource TitledBox}" 
                              Margin="0,10,0,10">
                        <DataGrid Style="{StaticResource DataGrid.Transparent}"
                                  ItemsSource="{Binding LocationList}"
                                  AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="위치 이름" Binding="{Binding Name}" Width="3*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="위치" Binding="{Binding Location}" Width="*"/>
                                <DataGridTextColumn Header="속도" Binding="{Binding Speed}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*"></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>

                        
                        <!-- 모터 상태 관리 -->
                        <GroupBox Style="{StaticResource TitledBox}" Header="모터 상태 관리" Grid.Row="0" Margin="10">
                            <uc:MoterStateControl x:Name="MoterState"></uc:MoterStateControl>

                        </GroupBox>
                        
                        <!-- 모터 조작 -->
                        <GroupBox Style="{StaticResource TitledBox}" Header="조작" Grid.Row="1" Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <TextBox  Style="{StaticResource TextBox.Rounded.Panel}" Width="150" Margin="5,0,0,0"></TextBox>
                                        <TextBlock Text="um" Margin="5,0,0,0"></TextBlock>                                    
                                    </StackPanel>
                                    
                                    <!-- 조작 버튼 --> 
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                                            <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Button Content="-1um" Grid.Column="0" Grid.Row="0" Margin="2" MinHeight="40"/>

                                        <Button Content="-0.1um" Grid.Column="0" Grid.Row="1" Margin="2" />
                                        <Button Content="-0.01um" Grid.Column="0" Grid.Row="2" Margin="2" />
                                        <Button Style="{StaticResource Button.Circle.WithRing}" 
                                                Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" 
                                                Width="100" Height="100"></Button>
                                        
                                        <Button Content="1um" Grid.Column="2" Grid.Row="0" Margin="2" MinHeight="40"/>

                                        <Button Content="0.1um" Grid.Column="2" Grid.Row="1" Margin="2" />
                                        <Button Content="0.01um" Grid.Column="2" Grid.Row="2" Margin="2" />
                                        <Button Content="정지" Background="Red" Grid.Column="1" Grid.Row="2" Margin="2"/>
                                    </Grid>    
                                </StackPanel>


                                <Grid Grid.Column="1" VerticalAlignment="Top">
                                    <!-- Speed -->
                                    <uc:LabelSlider TitleLabel="속도" 
                                                    Minimum="1" Maximum="100"
                                                    Height="230"
                                                    TickFrequency="1"
                                                    IsSnapToTickEnabled="True"
                                                    Value="{Binding Speed}"/>
                                </Grid>
                                
                                
                            </Grid>
                        </GroupBox>
                    </Grid>
                    
                    

                </Grid>
            </Border>
        </Grid>
    </Border>
    
</Page>
