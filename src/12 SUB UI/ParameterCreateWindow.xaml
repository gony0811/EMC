<Window x:Class="EGGPLANT.ParameterCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGGPLANT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MinWidth="380" MinHeight="180"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="18"></Setter>
                <Setter Property="Margin" Value="0,0,0,6"></Setter>
                <Setter Property="FontWeight" Value="DemiBold"></Setter>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Margin" Value="0,0,0,6"></Setter>
            </Style>

            <Style x:Key="DefaultCombo" TargetType="ComboBox" BasedOn="{x:Null}">
                <Setter Property="Foreground" Value="White"/>

            </Style>

        </ResourceDictionary>
    </Window.Resources>
    <Border Padding="16">
        <StackPanel>
            <TextBlock Text="파라미터 이름" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="현재 값" />
            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="최소 값"/>
            <TextBox Text="{Binding Minimum, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="최대 값"  />
            <TextBox Text="{Binding Maximum, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                    local:NumericTextBox.AllowDecimal="True"
                    local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="값 타입"/>
            <ComboBox 
                ItemsSource="{Binding ValueTypes}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedValueType, Mode=TwoWay}" />

            <TextBlock Text="단위"/>
            <ComboBox ItemsSource="{Binding Units}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedUnit, Mode=TwoWay}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0, 0">
                <Button Content="저장" Command="{Binding SaveCommand}" Width="60" Margin="0,0,6,0"></Button>    
                <Button Content="취소" Command="{Binding CancelCommand}" Width="60"></Button>    
            </StackPanel>
            
        </StackPanel>
    </Border>
</Window>
