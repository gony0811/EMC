<Window x:Class="EGGPLANT.ParameterCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGGPLANT"
        mc:Ignorable="d"
        Title="파라미터 생성" MinWidth="360">
    <Border Padding="16">
        <StackPanel>
            <TextBlock Text="파라미터 이름" Margin="0,0,0,6" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="현재 값" Margin="0,0,0,6" />
            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="최소 값" Margin="0,0,0,6" />
            <TextBox Text="{Binding Minimum, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="최대 값" Margin="0,0,0,6" />
            <TextBox Text="{Binding Maximum, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                    local:NumericTextBox.AllowDecimal="True"
                    local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="값 타입" Margin="12,12,0,6"/>
            <ComboBox ItemsSource="{Binding ValueTypes}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedValueType, Mode=TwoWay}" />

            <TextBlock Text="단위" Margin="12,12,0,6"/>
            <ComboBox ItemsSource="{Binding Units}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedUnit, Mode=TwoWay}" />

            <Button Content="생성" Command="{Binding CreateParameterCommand}"></Button>
        </StackPanel>
    </Border>
</Window>
