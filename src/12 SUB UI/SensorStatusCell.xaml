<UserControl x:Class="EGGPLANT._12_SUB_UI.SensorStatusCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="root"
             MinHeight="24" MinWidth="80"
             Background="Transparent"
             mc:Ignorable="d">
    <UserControl.Resources>

        <!-- 상태 점 스타일 -->
        <Style x:Key="DotStyle" TargetType="Ellipse">
            <Setter Property="Width"  Value="{Binding DotSize, ElementName=root}"/>
            <Setter Property="Height" Value="{Binding DotSize, ElementName=root}"/>
            <Setter Property="Fill"   Value="#7F8C8D"/>
            <!-- Unknown 기본 -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding State, ElementName=root}" Value="Normal">
                    <Setter Property="Fill" Value="#2ECC71"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State, ElementName=root}" Value="Warning">
                    <Setter Property="Fill" Value="#F4D03F"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State, ElementName=root}" Value="Error">
                    <Setter Property="Fill" Value="#E74C3C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State, ElementName=root}" Value="Offline">
                    <Setter Property="Fill" Value="#95A5A6"/>
                </DataTrigger>

                <!-- 경고/오류 시 점 깜빡임 -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding BlinkOnAlert, ElementName=root}" Value="True"/>
                        <Condition Binding="{Binding State, ElementName=root}" Value="Warning"/>
                    </MultiDataTrigger.Conditions>
                    <MultiDataTrigger.EnterActions>
                        <BeginStoryboard x:Name="BlinkWarning">
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.3" Duration="0:0:0.7"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </MultiDataTrigger.EnterActions>
                    <MultiDataTrigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="BlinkWarning"/>
                    </MultiDataTrigger.ExitActions>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding BlinkOnAlert, ElementName=root}" Value="True"/>
                        <Condition Binding="{Binding State, ElementName=root}" Value="Error"/>
                    </MultiDataTrigger.Conditions>
                    <MultiDataTrigger.EnterActions>
                        <BeginStoryboard x:Name="BlinkError">
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.2" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </MultiDataTrigger.EnterActions>
                    <MultiDataTrigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="BlinkError"/>
                    </MultiDataTrigger.ExitActions>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단: 색점 + 상태 텍스트 -->
            <RowDefinition Height="Auto"/>
            <!-- 하단: 상태명 -->
        </Grid.RowDefinitions>

        <!-- 상단 라인 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Ellipse Grid.Column="0" Style="{StaticResource DotStyle}"/>

            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Foreground="{Binding TextBrush, ElementName=root}"
                       TextTrimming="CharacterEllipsis">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <!-- 기본: Label 표시 -->
                        <Setter Property="Text" Value="{Binding Label, ElementName=root}"/>
                        <!-- Label이 없거나 빈 문자열이면 DefaultLabel -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Label, ElementName=root}" Value="{x:Null}">
                                <Setter Property="Text" Value="{Binding DefaultLabel, ElementName=root}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Label, ElementName=root}" Value="">
                                <Setter Property="Text" Value="{Binding DefaultLabel, ElementName=root}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- 하단: 상태명(보조 라벨) -->
        <TextBlock Grid.Row="1"
                   Margin="16,2,0,0"
                   FontSize="{Binding SubFontSize, ElementName=root}"   
                   Foreground="{Binding SubTextBrush, ElementName=root}"
                   FontWeight="Bold"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Left"                               
                   TextTrimming="CharacterEllipsis">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <!-- 기본: StatusName 사용 -->
                    <Setter Property="Text" Value="{Binding StatusName, ElementName=root}"/>
                    <!-- StatusName이 비거나 null이면 DefaultLabel 표시 -->
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StatusName, ElementName=root}" Value="{x:Null}">
                            <Setter Property="Text" Value="{Binding DefaultLabel, ElementName=root}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusName, ElementName=root}" Value="">
                            <Setter Property="Text" Value="{Binding DefaultLabel, ElementName=root}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </Grid>
</UserControl>
