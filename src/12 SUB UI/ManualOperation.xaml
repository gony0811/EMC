<UserControl x:Class="EGGPLANT._12_SUB_UI.ManualOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Background" Value="Gray"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Margin" Value="2"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Background" Value="Black"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <Border Grid.Row="0">
            <TextBlock Text="수동 조작"></TextBlock>
        </Border>
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="피치 이동" Width="100" Height="40"></Button>
            <Button Content="조그 이동" Width="100" Height="40"></Button>
        </StackPanel>
        
        <!-- Main -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Pitch Settings -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 라벨 -->
                    <RowDefinition Height="*"/>
                    <!-- 버튼1 -->
                    <RowDefinition Height="*"/>
                    <!-- 버튼2 -->
                    <RowDefinition Height="*"/>
                    <!-- 버튼3 -->
                    <RowDefinition Height="*"/>
                    <!-- 버튼4 -->
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text=""/>

                <Button Grid.Row="1" Content="1.00um"  Margin="2"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Grid.Row="2" Content="5.00um"  Margin="2"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Grid.Row="3" Content="10.00um" Margin="2"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Grid.Row="4" Content="사용자 입력" Margin="2"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid> 

            <!-- Sliders -->
            <Grid Margin="8" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- X -->
                <Grid Grid.Column="0" Margin="8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center">X</Label>

                    <Slider Grid.Row="1"
                        x:Name="sliderX"
                        Orientation="Vertical"
                        Minimum="1" Maximum="100"
                        TickPlacement="BottomRight" TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        
                        Margin="4"/>

                    <TextBox Grid.Row="2"
                 Width="50"
                 TextAlignment="Right"
                 Text="{Binding ElementName=sliderX, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- Y -->
                <Grid Grid.Column="1" Margin="8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center">Y</Label>

                    <Slider Grid.Row="1"
                        x:Name="sliderY"
                        Orientation="Vertical"
                        Minimum="1" Maximum="100"
                        TickPlacement="BottomRight" TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Margin="4"/>

                    <TextBox Grid.Row="2"
                 Width="50"
                 TextAlignment="Right"
                 Text="{Binding ElementName=sliderY, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <!-- Z -->
                <Grid Grid.Column="2" Margin="8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center">Z</Label>

                    <Slider Grid.Row="1"
                        x:Name="sliderZ"
                        Orientation="Vertical"
                        Minimum="1" Maximum="100"
                        TickPlacement="BottomRight" TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Margin="4"/>

                    <TextBox Grid.Row="2"
                 Width="50"
                 TextAlignment="Right"
                 Text="{Binding ElementName=sliderZ, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
            
            
            <!-- JOG BUTTONS -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!-- 전방 -->
                <RepeatButton Grid.Row="0" Grid.Column="1" Margin="2"
                  Content="▲" FontSize="22"
                  Delay="250" Interval="60"
                  Command="{Binding MoveForwardCommand}" />

                <!-- 좌 -->
                <RepeatButton Grid.Row="1" Grid.Column="0" Margin="2"
                  Content="◀" FontSize="22"
                  Delay="250" Interval="60"
                  Command="{Binding MoveLeftCommand}" />

                <!-- 우 -->
                <RepeatButton Grid.Row="1" Grid.Column="2" Margin="2"
                  Content="▶" FontSize="22"
                  Delay="250" Interval="60"
                  Command="{Binding MoveRightCommand}" />

                <!-- 후방 -->
                <RepeatButton Grid.Row="2" Grid.Column="1" Margin="2"
                  Content="▼" FontSize="22"
                  Delay="250" Interval="60"
                  Command="{Binding MoveBackCommand}" />
                
                <!-- 위 -->
                <RepeatButton Grid.Row="0" Grid.Column="3" Margin="8,0,0,2"
                  Content="▲" FontSize="22"
                  Delay="250" Interval="60"
                  Command="{Binding MoveUpCommand}" />

                <RepeatButton Grid.Row="1" Grid.Column="3" Margin="8,0,0,2"
                    Content="▼" FontSize="22"
                    Delay="250" Interval="60"
                    Command="{Binding MoveDownCommand}" />
            </Grid>
        </Grid>
    </Grid>
    
    
    
</UserControl>
