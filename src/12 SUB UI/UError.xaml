<Window x:Class="EGGPLANT.UError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGGPLANT"
        mc:Ignorable="d"
        Background="{DynamicResource MahApps.Brushes.Window.Background}"
        Title="ERROR" Height="450" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="1" VerticalAlignment="Center">
                <iconPacks:PackIconMaterial x:Name="ErrorIcon" Kind="AlertRemoveOutline" Foreground="Red" Width="48" Height="48" Margin="5" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Label_ErrorTitle" Grid.Column="1" Margin="1" Text="에러가 발생했습니다." FontSize="18" FontWeight="Bold" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Button Grid.Column="2" Margin="1" Background="White">
                <StackPanel Orientation="Vertical">
                    <iconPacks:PackIconMaterial Kind="BellOffOutline" Width="48" Height="48" Margin="5" HorizontalAlignment="Center" Foreground="Black"/>
                </StackPanel>
            </Button>
        </Grid>

        <TabControl Grid.Column="0" Grid.Row="1" Margin="1">
            <TabItem Margin="1" Style="{DynamicResource MahApps.Styles.TabItem}">
                <TabItem.Header>
                    <TextBlock Text="에러 원인" Foreground="White"/>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBox TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Background="#FFF0F0F0" FontFamily="Consolas" FontSize="14" Text="{Binding ErrorCause}" Foreground="Black">
                    </TextBox>
                </TabItem.Content>

            </TabItem>
        </TabControl>

        <TabControl Grid.Column="0" Grid.Row="2" Margin="1" Background="Transparent">
            <TabItem Margin="1">
                <TabItem.Header>
                    <TextBlock Text="조치 사항" Foreground="White"/>
                </TabItem.Header>
                <TabItem.Content>
                    <TextBox TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Background="#FFF0F0F0" FontFamily="Consolas" FontSize="14" Text="{Binding ErrorCorrection}" Foreground="Black">
                    </TextBox>
                </TabItem.Content>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="1">
            <Button Content="확인" Width="100" Height="30" Margin="5"/>
        </StackPanel>

        <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="4"/>
    </Grid>
</Window>
