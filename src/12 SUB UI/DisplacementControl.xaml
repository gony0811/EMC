<!-- 변위 센서 컨트롤러 -->
<UserControl x:Class="EGGPLANT._12_SUB_UI.DisplacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Background" Value="Gray"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="2"></Setter>
                <Setter Property="Background" Value="Black"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Name -->
        <TextBlock Text="변위 센서 컨트롤" Grid.Row="0" Grid.ColumnSpan="3"></TextBlock>
        
        <!-- Value -->
        <TextBlock Text="0"
                   Grid.Column="0"
                   Grid.Row="1"
                   Grid.RowSpan="2"
                   TextAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="pack://application:,,,/YourAssembly;component/Fonts/#Digital-7 Mono"
                   FontSize="64"
                   Background="Black"
                   Foreground="#00FF57" />

        <Button Content="ZERO SET" Grid.Column="1" Grid.Row="1"></Button>
        <Button Content="ZERO CANCEL" Grid.Column="2" Grid.Row="1"></Button>
        <Button Content="ZERO LIVE" Grid.Column="1" Grid.Row="2"></Button>
        <Button Content="ZERO READ" Grid.Column="2" Grid.Row="2"></Button>
    </Grid>
</UserControl>
