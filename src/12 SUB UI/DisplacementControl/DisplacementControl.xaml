<UserControl x:Class="EGGPLANT.DisplacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="root"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderThickness" Value="0"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="TitleText">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- 제목 -->
        <Border Grid.ColumnSpan="2" Grid.Row="0">
            <TextBlock Text="{Binding Title, ElementName=root}" Style="{StaticResource TitleText}"></TextBlock>
        </Border>

        <!-- 값 영역 -->
        <Border Grid.Column="0" Grid.Row="1">
            <TextBlock Text="{Binding Value, ElementName=root}"
                       TextAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="64"
                       Background="Black"
                       Foreground="#00FF57" />
        </Border>
        
        <!-- 버튼 영역-->
        <Border Grid.Column="1" Grid.Row="1" >
            <ScrollViewer VerticalScrollBarVisibility="Disabled"
                HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Actions, ElementName=root}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"
                                       HorizontalAlignment="Center"
                                       ItemHeight="40"  
                                       ItemWidth="86"
                                       Height="82"/>   
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Title}"
                                    Command="{Binding Command}"
                                    CommandParameter="{Binding CommandParameter}"   
                                    Height="36"
                                    Margin="0,2"
                                    HorizontalAlignment="Stretch"
                                    Width="80"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
