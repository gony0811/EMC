<UserControl x:Class="EGGPLANT._12_SUB_UI.StageParameterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Background" Value="Gray"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="TextAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
                <Setter Property="Margin" Value="2"></Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="2"></Setter>
                <Setter Property="Background" Value="Black"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!-- 5행, 6열 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!-- 1행: Title-->
        <TextBlock Text="{Binding Title}" Grid.ColumnSpan="5" Grid.Row="0"/>
        
        <!-- 2행: Column명 -->
        <TextBlock Text="Name" Grid.Column="1" Grid.Row="1"/>
        <TextBlock Text="Position(um)" Grid.Column="2" Grid.Row="1"/>
        <TextBlock Text="Speed" Grid.Column="3" Grid.Row="1"/>
        
        <!-- 1열: ApplyButton -->
        <Button Content="Apply" Grid.Column="0" Grid.Row="2"></Button>
        <Button Content="Apply" Grid.Column="0" Grid.Row="3"></Button>
        <Button Content="Apply" Grid.Column="0" Grid.Row="4"></Button>
        <Button Content="Apply" Grid.Column="0" Grid.Row="5"></Button>
        
        <!-- 2열: Stage Parameter Name -->
        <TextBlock Text="{Binding AParamterName}" Grid.Column="1" Grid.Row="2"></TextBlock>
        <TextBlock Text="{Binding BParamterName}" Grid.Column="1" Grid.Row="3"></TextBlock>
        <TextBlock Text="{Binding CParamterName}" Grid.Column="1" Grid.Row="4"></TextBlock>
        <TextBlock Text="{Binding DParamterName}" Grid.Column="1" Grid.Row="5"></TextBlock>

        <!-- 3열: Stage Position Parameter Value -->
        <TextBlock Text="{Binding APositionValue}" Grid.Column="2" Grid.Row="2"></TextBlock>
        <TextBlock Text="{Binding BPositionValue}" Grid.Column="2" Grid.Row="3"></TextBlock>
        <TextBlock Text="{Binding CPositionValue}" Grid.Column="2" Grid.Row="4"></TextBlock>
        <TextBlock Text="{Binding DPositionValue}" Grid.Column="2" Grid.Row="5"></TextBlock>
        
        <!-- 4열: Stage Speed Parameter value-->
        <TextBlock Text="{Binding ASpeedValue}" Grid.Column="3" Grid.Row="2"></TextBlock>
        <TextBlock Text="{Binding BSpeedValue}" Grid.Column="3" Grid.Row="3"></TextBlock>
        <TextBlock Text="{Binding CSpeedValue}" Grid.Column="3" Grid.Row="4"></TextBlock>
        <TextBlock Text="{Binding DSpeedValue}" Grid.Column="3" Grid.Row="5"></TextBlock>
        
        <!-- 5열: 이동 버튼 -->
        <Button Content="이동" Grid.Column="4" Grid.Row="2"></Button>
        <Button Content="이동" Grid.Column="4" Grid.Row="3"></Button>
        <Button Content="이동" Grid.Column="4" Grid.Row="4"></Button>
        <Button Content="이동" Grid.Column="4" Grid.Row="5"></Button>
    </Grid>
</UserControl>
