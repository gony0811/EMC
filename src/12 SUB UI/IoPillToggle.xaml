<UserControl x:Class="EGGPLANT._12_SUB_UI.IoPillToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EGGPLANT._12_SUB_UI"
             mc:Ignorable="d"
             x:Name="root"
             Width="112" Height="36" Background="Transparent">
    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InvBool"/>
    </UserControl.Resources>

    <!-- 버튼 전체가 토글 역할 -->
    <ToggleButton x:Name="PART_Toggle"
                  IsChecked="{Binding IsChecked, ElementName=root, Mode=TwoWay}"
                  IsEnabled="{Binding IsReadOnly, ElementName=root, Converter={StaticResource InvBool}}"
                  Command="{Binding Command, ElementName=root}"  
                  CommandParameter="{Binding CommandParameter, ElementName=root}"
                  Background="Transparent" BorderThickness="0" Cursor="Hand" Focusable="True">
        <ToggleButton.Template>
            <ControlTemplate TargetType="ToggleButton">
                <Grid SnapsToDevicePixels="True" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 좌측 원형 인디케이터 -->
                    <Border x:Name="indicator"
                              Grid.Column="0"
                              Width="{Binding IndicatorSize, ElementName=root}"
                              Height="{Binding IndicatorSize, ElementName=root}"
                              CornerRadius="999"
                              Background="Transparent"
                              BorderBrush="{Binding IndicatorOffStroke, ElementName=root}"
                              BorderThickness="2"
                              VerticalAlignment="Center"/>

                    <!-- 우측 ON/OFF pill -->
                    <Border x:Name="pill"
                              Grid.Column="2"
                              MinWidth="52" Height="24"
                              Padding="10,0"
                              CornerRadius="5"
                              Background="{Binding PillOffBrush, ElementName=root}"
                              VerticalAlignment="Center">
                        <TextBlock x:Name="lbl"
                                   Text="{Binding OffText, ElementName=root}"
                                   Foreground="{Binding LabelInactiveBrush, ElementName=root}"
                                   FontWeight="SemiBold"
                                   FontSize="{Binding LabelFontSize, ElementName=root}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- 상태 트리거 -->
                <ControlTemplate.Triggers>
                    <!-- ON -->
                    <Trigger Property="IsChecked" Value="True">
                        <!-- 인디케이터: 채움색 / 테두리 제거 -->
                        <Setter TargetName="indicator" Property="Background" Value="{Binding IndicatorOnFill, ElementName=root}"/>
                        <Setter TargetName="indicator" Property="BorderThickness" Value="0"/>

                        <!-- pill: On 색상 + 라벨 -->
                        <Setter TargetName="pill" Property="Background" Value="{Binding PillOnBrush, ElementName=root}"/>
                        <Setter TargetName="lbl"  Property="Text"        Value="{Binding OnText, ElementName=root}"/>
                        <Setter TargetName="lbl"  Property="Foreground"  Value="{Binding LabelActiveBrush, ElementName=root}"/>
                    </Trigger>

                    <!-- OFF -->
                    <Trigger Property="IsChecked" Value="False">
                        <!-- 인디케이터: 투명 채움 + 붉은 링 -->
                        <Setter TargetName="indicator" Property="Background" Value="Transparent"/>
                        <Setter TargetName="indicator" Property="BorderBrush" Value="{Binding IndicatorOffStroke, ElementName=root}"/>
                        <Setter TargetName="indicator" Property="BorderThickness" Value="2"/>

                        <Setter TargetName="pill" Property="Background" Value="{Binding PillOffBrush, ElementName=root}"/>
                        <Setter TargetName="lbl"  Property="Text"        Value="{Binding OffText, ElementName=root}"/>
                        <Setter TargetName="lbl"  Property="Foreground"  Value="{Binding LabelInactiveBrush, ElementName=root}"/>
                    </Trigger>

                    <!-- 읽기 전용(입력신호) 표기 -->
                    <DataTrigger Binding="{Binding IsReadOnly, ElementName=root}" Value="True">
                        <Setter Property="Cursor" Value="Arrow"/>
                        <Setter TargetName="pill" Property="Opacity" Value="0.9"/>
                    </DataTrigger>

                    <!-- 비활성화 -->
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Cursor" Value="Arrow"/>
                        <Setter TargetName="pill" Property="Background" Value="#223149"/>
                        <Setter TargetName="lbl"  Property="Foreground" Value="#80FFFFFF"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </ToggleButton.Template>
    </ToggleButton>
</UserControl>
