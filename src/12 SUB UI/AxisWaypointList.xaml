<UserControl x:Class="EGGPLANT._12_SUB_UI.AxisWaypointList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:EGGPLANT._12_SUB_UI"
             x:Name="root"
             Background="Transparent">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B3FFFFFF"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="ColumnName">
            <Setter Property="Foreground" Value="#B3FFFFFF"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 제목 -->
            <RowDefinition Height="Auto"/>
            <!-- 컬럼 헤더 -->
            <RowDefinition Height="*"/>
            <!-- 아이템 영역 -->
        </Grid.RowDefinitions>


        <!-- 컬럼 헤더 (AxisWaypointSet과 동일한 그리드 구성) -->
        <Border Grid.Row="1" BorderBrush="#16233B" BorderThickness="0,0,0,1" Padding="0,2">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <!-- APPLY -->
                    <ColumnDefinition Width="1*"/>
                    <!-- NAME -->
                    <ColumnDefinition Width="2*"/>
                    <!-- POSITION -->
                    <ColumnDefinition Width="1.5*"/>
                    <!-- SPEED -->
                    <ColumnDefinition Width="1*"/>
                    <!-- MOVE -->
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" Text="Name" Style="{StaticResource ColumnName}"/>
                <TextBlock Grid.Column="2" Text="Position ( um )" Style="{StaticResource ColumnName}"/>
                <TextBlock Grid.Column="3" Text="Speed" Style="{StaticResource ColumnName}"/>
            </Grid>
        </Border>
        

        <!-- 아이템 리스트 -->
        <ItemsControl Grid.Row="2"
                      ItemsSource="{Binding Items, ElementName=root}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- 한 행: AxisWaypointSet (내부 Grid는 동일 컬럼 규격) -->
                    <Border BorderBrush="#16233B" BorderThickness="0,0,0,1" Padding="0,2">
                        <uc:AxisWaypointSet Margin="0,2" ViewModel="{Binding}"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Margin" Value="0,2"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            
        </ItemsControl>
    </Grid>
</UserControl>