<UserControl x:Class="EGGPLANT.PowerLamp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EGGPLANT"
             x:Name="root"
             Background="Transparent">

    <UserControl.Resources>
        <!-- 상태 → 텍스트 변환기 -->
        <local:LampStateToTextConverter x:Key="StateToText"/>
        <Style x:Key="Button.Overlay.NoVisuals" TargetType="Button" BasedOn="{x:Null}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- 배경만 투명한 히트영역. 트리거 없음! -->
                        <Border Background="{TemplateBinding Background}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- ⬇⬇⬇ 램프만 감싸는 래퍼: Hover 시 투명도 살짝 ↓ -->
        <Grid x:Name="LampHost">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="1"/>
                    <Style.Triggers>
                        <!-- 마우스가 UserControl 위에 올라오면 0.85 -->
                        <DataTrigger
          Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"
          Value="True">
                            <Setter Property="Opacity" Value="0.85"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- 램프 본체 -->
            <Border>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background"
                Value="{Binding OffBrush, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"/>
                        <Setter Property="Opacity" Value="1"/>

                        <Style.Triggers>
                            <!-- 켜짐 -->
                            <DataTrigger Binding="{Binding State, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"
                       Value="{x:Static local:LampState.On}">
                                <Setter Property="Background"
                    Value="{Binding OnBrush, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"/>
                                <Setter Property="Opacity" Value="1"/>
                            </DataTrigger>

                            <!-- 깜빡임 -->
                            <DataTrigger Binding="{Binding State, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"
                       Value="{x:Static local:LampState.Blink}">
                                <Setter Property="Background"
                    Value="{Binding OnBrush, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="BlinkSB">
                                        <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0.35" To="1.0" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="BlinkSB"/>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <!-- 중앙 라벨: 상태에 따라 "꺼짐/켜짐/깜빡임" -->
            <TextBlock Text="{Binding State, RelativeSource={RelativeSource AncestorType=local:PowerLamp},
                              Converter={StaticResource StateToText},
                              ConverterParameter='꺼짐|켜짐|깜빡임'}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontWeight="SemiBold" Foreground="White" />

            <!-- 클릭 처리: Command / Click 이벤트 모두 지원 -->
            <Button Style="{StaticResource Button.Overlay.NoVisuals}"
                    Background="Transparent"
                    Command="{Binding Command, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"
                    CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=local:PowerLamp}}"
                    Click="OnButtonClick"/>
        </Grid>
    </Grid>
</UserControl>
