<UserControl x:Class="EGGPLANT._12_SUB_UI.ImagePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ip="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="4"></Setter>
                <Setter Property="MinWidth" Value="20"></Setter>
                <Setter Property="MinHeight" Value="20"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Option Buttons -->
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <Button ToolTip="확대">
                <StackPanel Orientation="Horizontal">
                    <ip:PackIconMaterial Kind="MagnifyPlusOutline" Width="20" Height="20"/>
                </StackPanel>
            </Button>

            <Button ToolTip="축소">
                <StackPanel Orientation="Horizontal">
                    <ip:PackIconMaterial Kind="MagnifyMinusOutline" Width="20" Height="20"/>
                </StackPanel>
            </Button>

            <Button ToolTip="화면 맞춤">
                <StackPanel Orientation="Horizontal">
                    <ip:PackIconMaterial Kind="FitToScreen" Width="20" Height="20"/>
                </StackPanel>
            </Button>

            <Button ToolTip="팬/이동">
                <StackPanel Orientation="Horizontal">
                    <ip:PackIconMaterial Kind="CursorMove" Width="20" Height="20"/>
                </StackPanel>
            </Button>

            <!-- 영점 -->
            <Button ToolTip="영점">
                <StackPanel Orientation="Horizontal">
                    <ip:PackIconMaterial Kind="CrosshairsGps" Width="18" Height="18"/>
                </StackPanel>
            </Button>

            <!-- 결과표시 -->
            <Button ToolTip="결과 표시">
                <StackPanel Orientation="Horizontal">
                    <ip:PackIconMaterial Kind="ChartLine" Width="18" Height="18"/>
                    <TextBlock Text="결과표시" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <!-- ✅ 구분선 (툴바 아래 가로 라인) -->
        <Border Grid.Row="1" Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            Background="White"   
            Margin="0,6,0,0"/>
        <Image />
    </Grid>
</UserControl>
