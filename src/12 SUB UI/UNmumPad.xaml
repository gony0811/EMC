<Window x:Class="EGGPLANT._12_SUB_UI.UNmumPad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGGPLANT._12_SUB_UI"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewTextInput="Window_PreviewTextInput"
        mc:Ignorable="d"
        Title="KEY PAD" Height="300" Width="600">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*"></ColumnDefinition>
            <ColumnDefinition Width="0.65*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- 정보 UI -->
        <StackPanel Orientation="Vertical" Grid.Column="0"
              VerticalAlignment="Bottom" HorizontalAlignment="Left"
              Margin="12" ClipToBounds="False">
            <Border BorderBrush="Black" BorderThickness="1" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" MinWidth="80" Margin="0, 0, 0, -8" Panel.ZIndex="1">
                <TextBlock Text="Current Value" TextAlignment="Center"></TextBlock>
            </Border>
            <TextBox Background="White" Foreground="Black" Text="{Binding CurrentValue}" Width="150" MinWidth="150" TextAlignment="Right" Panel.ZIndex="0" Margin="0,0,0,8"></TextBox>

            <Border BorderBrush="Black" BorderThickness="1" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" MinWidth="80" Margin="0, 0, 0, -8" Panel.ZIndex="1">
                <TextBlock Text="Maximum Value" TextAlignment="Center"></TextBlock>
            </Border>
            <TextBox Background="White" Foreground="Black" Text="{Binding MaximumValue}" Width="150" MinWidth="150" TextAlignment="Right" Panel.ZIndex="0" Margin="0,0,0,8"></TextBox>

            <Border BorderBrush="Black" BorderThickness="1" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" MinWidth="80" Margin="0, 0, 0, -8" Panel.ZIndex="1">
                <TextBlock Text="Minimum Value" TextAlignment="Center"></TextBlock>
            </Border>
            <TextBox Background="White" Foreground="Black" Text="{Binding MinimumValue}" Width="150" MinWidth="150" TextAlignment="Right" Panel.ZIndex="0" Margin="0,0,0,8"></TextBox>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 표시부 -->
            <TextBox x:Name="InputBox" Grid.Row="0"
                 Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="26" FontWeight="Bold"
                 HorizontalContentAlignment="Right"
                 VerticalContentAlignment="Center"
                 Padding="8"
                 InputMethod.IsInputMethodEnabled="False"
                 LostFocus="InputBox_LostFocus"/>   

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 1행: 7 8 9 C -->
                <Button Grid.Row="0" Grid.Column="0" Content="7" Click="OnDigit"/>
                <Button Grid.Row="0" Grid.Column="1" Content="8" Click="OnDigit"/>
                <Button Grid.Row="0" Grid.Column="2" Content="9" Click="OnDigit"/>
                <Button Grid.Row="0" Grid.Column="3" Content="C" Background="Gray" Click="OnClearAll"/>

                <!-- 2행: 4 5 6 ⌫ -->
                <Button Grid.Row="1" Grid.Column="0" Content="4" Click="OnDigit"/>
                <Button Grid.Row="1" Grid.Column="1" Content="5" Click="OnDigit"/>
                <Button Grid.Row="1" Grid.Column="2" Content="6" Click="OnDigit"/>
                <Button Grid.Row="1" Grid.Column="3" Content="⌫" Background="Gray" Click="OnBackspace"/>

                <!-- 3행: 1 2 3 - -->
                <Button Grid.Row="2" Grid.Column="0" Content="1" Click="OnDigit"/>
                <Button Grid.Row="2" Grid.Column="1" Content="2" Click="OnDigit"/>
                <Button Grid.Row="2" Grid.Column="2" Content="3" Click="OnDigit"/>
                <Button Grid.Row="2" Grid.Column="3" Content="−" Background="Gray" Click="OnDecrement"/>

                <!-- 4행: 0 (빈칸) + -->
                <Button Grid.Row="3" Grid.Column="1" Content="0" Click="OnDigit"/>
                <Button Grid.Row="3" Grid.Column="2" Content="." Click="OnDot"/>
                <Button Grid.Row="3" Grid.Column="3" Content="＋" Background="Gray" Click="OnIncrement"/>
                <Button Grid.Row="4" Grid.Column="2" Content="Apply" Click="OnApply" Background="Green"></Button>
                <Button Grid.Row="4" Grid.Column="3" Content="Cancel" Click="OnCancel" Background="Red"></Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
