<Window x:Class="EGGPLANT.ConfirmModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGGPLANT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="380" MinHeight="180"
        WindowStyle="None"
        >
    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 커스텀 타이틀(창 타이틀과 동일 텍스트) -->
            <TextBlock Grid.Row="0"
                       Text="{Binding TitleText, RelativeSource={RelativeSource AncestorType=Window}}"
                       TextAlignment="Center"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <!-- 본문 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding MessageText, RelativeSource={RelativeSource AncestorType=Window}}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Foreground="White"
                           LineHeight="22"/>
            </ScrollViewer>

            <!-- 버튼 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="확인" Width="90" Height="36" Margin="0,0,8,0"
                        IsDefault="True"
                        Click="OnOkClick"/>
                <Button Content="취소" Width="90" Height="36"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
