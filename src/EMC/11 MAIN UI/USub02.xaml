<Page x:Class="EMC.USub02"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EMC"
      xmlns:uc="clr-namespace:EMC"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      Title="USub02">
    <!-- 파라미터 화면 -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/01 SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </Page.Resources>
    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!-- 제목 -->
            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="파라미터 설정"/>
            </Border>
            <!-- 좌측 디바이스 정보 리스트 -->
            <GroupBox Style="{StaticResource TitledBox}" Header="디바이스" Grid.Column="0" Grid.Row="1" Margin="10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!-- 현재 디바이스 Row 0 -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="현재 레시피" Foreground="White" VerticalAlignment="Center"></TextBlock>
                        </Border>
                        
                        <TextBox Grid.Column="1" Text="{Binding SelectedRecipe.Name}"
                                 Style="{StaticResource TextBox.Rounded.Panel}"
                                 BorderBrush="DarkGray"
                                 TextAlignment="Left"
                                 FontWeight="Bold"
                                 IsReadOnly="True"
                                 Focusable="False"
                                 Cursor="Arrow"
                                 ContextMenu="{x:Null}"           
                                 AllowDrop="False"     
                                 IsTabStop="False" 
                                 VerticalAlignment="Center"
        />
                    </Grid>
                    <!-- 디바이스 목록 및 상호작용 버튼  Row 2 -->
                    <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,4,0,0">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button Content="생성" Command="{Binding CreateRecipeCommand}" Width="50" Margin="0,0,6,0"/>
                            <Button Content="복사" Margin="0,0,6,0" Width="50"
                                    Command="{Binding CopyRecipeCommand}" 
                                    CommandParameter="{Binding SelectedItem, ElementName=RecipeGrid}"/>
                            <Button Content="삭제" Width="50" 
                                    Command="{Binding DeleteRecipeCommand}" 
                                    CommandParameter="{Binding SelectedItem, ElementName=RecipeGrid}"/>
                        </StackPanel>

                        <TextBlock Text="디바이스 목록"
                                     VerticalAlignment="Center" Foreground="White"
                                     HorizontalAlignment="Left" TextAlignment="Right"/>
                    </DockPanel>
                    <!-- 디바이스 목록 -->
                    <DataGrid  x:Name="RecipeGrid"
                               Grid.Row="2"
                              ItemsSource="{Binding Recipes}"
                              SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}"
                              Style="{StaticResource DataGrid.Transparent}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              FontSize="16"
                              Margin="0,8,0,0"
                              ColumnWidth="*"               
                              HorizontalAlignment="Stretch">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                      Command="{Binding DataContext.ClickRecipeCommand, ElementName=RecipeGrid}"
                                      CommandParameter="{Binding SelectedItem, ElementName=RecipeGrid}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <!-- 더블클릭 → VM.Command(SelectedDevice) -->
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                           Command="{Binding DataContext.ChangeUseRecipeCommand, ElementName=RecipeGrid}"
                                           CommandParameter="{Binding SelectedItem, ElementName=RecipeGrid}"/>
                        </DataGrid.InputBindings>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" IsReadOnly="True" Width="90" MinWidth="80" />

                            <!-- 이름 + 우측 "사용중" 뱃지 -->
                            <DataGridTemplateColumn Header="이름" Width="*" MinWidth="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel LastChildFill="True">
                                            <Border DockPanel.Dock="Right"
                                                    CornerRadius="10"
                                                    Padding="6,2"
                                                    Margin="8,0,0,0"
                                                    Background="#22008000"
                                                    BorderBrush="#19E225"
                                                    BorderThickness="1"
                                                    Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="사용중" FontSize="16" Foreground="#19E225"/>
                                            </Border>

                                            <TextBlock Text="{Binding Name}"
                                                        FontSize="16"
                                                        VerticalAlignment="Center"
                                                        TextTrimming="CharacterEllipsis"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <GroupBox Style="{StaticResource TitledBox}" Header="파라미터 목록" Grid.Column="1" Grid.Row="1" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="ParamGrid"
                                Grid.Row="0"
                                ItemsSource="{Binding RecipeParam}"
                                SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                Style="{StaticResource DataGrid.Transparent}"
                                FontSize="18"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="Column"
                                RowHeaderWidth="0"
                                Margin="0,8,0,0">
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                           Command="{Binding DataContext.UpdateParameterCommand, ElementName=ParamGrid}"
                                           CommandParameter="{Binding SelectedItem, ElementName=ParamGrid}"/>
                        </DataGrid.InputBindings>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Name}"
                                                IsReadOnly="True"
                                                Width="2*"/>
                            <!-- ↓ Value 컬럼(편집 가능) -->
                            <DataGridTextColumn Header="Value"
                                                  Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                  Width="Auto">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Width="100" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Unit.Name}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Right" Margin="10">
                        <Button Content="생성" 
                                Width="80" Height="30" 
                                Command="{Binding CreateParameterCommand}"
                                CommandParameter="{Binding SelectedItem, ElementName=RecipeGrid}"
                                ></Button>
                    </StackPanel>
                </Grid>
                
            </GroupBox>
        </Grid>
    </Border>
    
    

</Page>