<Page x:Class="EMC.USub05" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:EMC" 
      xmlns:db="clr-namespace:EMC.DB;assembly=EMC.DB" 
      xmlns:uc="clr-namespace:EMC" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib" 
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800" 
      Title="에러 목록">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/01 SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <CollectionViewSource x:Key="AlarmsSource" Source="{Binding AlarmList}" />
            <CompositeCollection x:Key="AlamsWithAdder">
                <CollectionContainer Collection="{Binding Source={StaticResource AlarmsSource}}" />
                <sys:String>__ADD__</sys:String>
            </CompositeCollection>
            <ObjectDataProvider x:Key="AlarmLevelValues"
                        ObjectType="{x:Type sys:Enum}"
                        MethodName="GetValues"
                        xmlns:sys="clr-namespace:System;assembly=mscorlib">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="db:AlarmLevel"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </Page.Resources>
    <!-- 에러 리스트 화면 -->
    <Border Style="{StaticResource Panel.Radius5}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.65*"/>
                <ColumnDefinition Width="0.35*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0" Margin="10">
                <uc:TitleBar Title="알람 정의"/>
            </Border>
            <!-- 에러 목록 -->
            <Grid Grid.Column="0" Grid.Row="1" Margin="10" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <GroupBox Style="{StaticResource TitledBox}" Header="알람 목록">
                    <DataGrid
                            x:Name="AlarmGrid"
                            Style="{StaticResource DataGrid.Transparent}"
                            FontSize="18"
                            ItemsSource="{Binding Source={StaticResource AlamsWithAdder}}"
                            SelectedItem="{Binding SelectedAlarm, Mode=TwoWay}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            HeadersVisibility="Column"
                            RowHeaderWidth="0"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            EnableRowVirtualization="True"
                            ScrollViewer.CanContentScroll="True"
                            Margin="0,8,8,0"
                            CanUserSortColumns="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="코드" Binding="{Binding Code}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="알람 내용" Binding="{Binding Name}" Width="2*"/>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Focusable" Value="False"/>
                                <Style.Triggers>
                                    <!-- 아이템이 문자열 "__ADD__"이면 플러스 행으로 렌더 -->
                                    <DataTrigger Binding="{Binding}" Value="__ADD__">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridRow">
                                                    <Border Background="Transparent" Padding="6">
                                                        <Button Content="➕  새 알람 추가"
                                                                HorizontalAlignment="Center"
                                                                Padding="12,6"
                                                                Focusable="False"
                                                                Command="{Binding DataContext.CreateAlarmCommand,
                                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <!-- 클릭 시 행 선택이 바뀌지 않도록(대부분 케이스에서 충분) -->
                                        <Setter Property="IsHitTestVisible" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </GroupBox>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="되돌리기" Width="90" Height="30" Command="{Binding DiscardCommand}" />
                    <Button Content="저장" Width="80" Height="30" Command="{Binding SaveAlarmCommand}" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
            <!-- 편집부 -->
            <GroupBox Style="{StaticResource TitledBox}" Header="상세 정보" Grid.Row="1" Grid.Column="1" Margin="10" >
                <StackPanel Margin="10" DataContext="{Binding SelectedAlarm}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="{StaticResource Brush.Panel}" CornerRadius="5" Padding="12">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Text="Code" Foreground="#E6FFFFFF"/>
                                <TextBox Style="{StaticResource TextBox.Rounded.Panel}" Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Background="{StaticResource Brush.Panel}" CornerRadius="5" Padding="12">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Text="알람 내용" Foreground="#E6FFFFFF"/>
                                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBox.Rounded.Panel}" Width="300" />
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Background="{StaticResource Brush.Panel}" CornerRadius="5" Padding="12">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Text="레벨" Foreground="#E6FFFFFF"/>
                                <ComboBox
                                    ItemsSource="{Binding Source={StaticResource AlarmLevelValues}}"
                                    SelectedItem="{Binding Level, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="160" Height="28" Style="{StaticResource RoundedComboBox}">
                                </ComboBox>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Border Background="{StaticResource Brush.Panel}" CornerRadius="5" Padding="12">
                        <StackPanel>
                            <TextBlock Text="사용 여부" Foreground="#E6FFFFFF"/>
                            <CheckBox IsChecked="{Binding Enabled}"></CheckBox>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource Brush.Panel}" CornerRadius="5" Padding="12">
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock Text="원인" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBox.Rounded.Panel}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="120"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource Brush.Panel}" CornerRadius="5" Padding="12">
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock Text="해결 방법" FontWeight="SemiBold" Margin="0,12,0,4"/>
                            <TextBox Text="{Binding Action, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBox.Rounded.Panel}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="160"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Border>
</Page>