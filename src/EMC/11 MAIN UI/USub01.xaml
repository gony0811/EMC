<Page x:Class="EMC.USub01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EMC"
      mc:Ignorable="d" 
      Title="USub01">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/01 SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:KeyEqualsConverter x:Key="KeyEquals"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="현재 디바이스" 
                       IsEnabled="True"
                       IsHitTestVisible="False"
                       FontSize="24"
                       Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Margin="1"/>

            <Button x:Name="tbCurrentDevice"
                       Content="{Binding CurrentDevice}"         
                       IsEnabled="True"
                       IsHitTestVisible="False"
                       FontSize="24"
                       Grid.Column="1" 
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center" 
                       Margin="1"/>
        </Grid>
        
        <!-- Tab Panel-->
        <Border Style="{StaticResource Panel.Radius5}" Grid.Row="1">
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                                <!-- 콘텐츠 영역 -->
                    <Frame x:Name="ContentFrame" Content="{Binding CurrentTab}" Grid.Column="0" NavigationUIVisibility="Hidden"/>

                              <!-- 탭 패널 -->
                    <Grid x:Name="TabPanel" Grid.Column="1" Width="150">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <ToggleButton Tag="LOADING"
                                      Content="LOADING"
                                      Grid.Row="0"
                                      Command="{Binding SetTabCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                      IsChecked="{Binding SelectedTabKey, Converter={StaticResource KeyEquals}, ConverterParameter=LOADING}"
                                      Style="{StaticResource Toggle.Switch}"
                                      Margin="0 1 0 1">
                        </ToggleButton>

                        <ToggleButton Tag="AUTO"
                                      Content="AUTO"
                                      Grid.Row="1"
                                      Command="{Binding SetTabCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                      IsChecked="{Binding SelectedTabKey, Converter={StaticResource KeyEquals}, ConverterParameter=AUTO}"
                                      Style="{StaticResource Toggle.Switch}"
                                      Margin="0 1 0 1">
                        </ToggleButton>

                        <ToggleButton Tag="MANUAL"
                                      Content="MANUAL"
                                      Grid.Row="2"
                                      Command="{Binding SetTabCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                      IsChecked="{Binding SelectedTabKey, Converter={StaticResource KeyEquals}, ConverterParameter=MANUAL}"
                                      Style="{StaticResource Toggle.Switch}"
                                      Margin="0 1 0 1">
                        </ToggleButton>

                        <ToggleButton Tag="STEP"
                                      Content="STEP"
                                      Grid.Row="3"
                                      Command="{Binding SetTabCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                      IsChecked="{Binding SelectedTabKey, Converter={StaticResource KeyEquals}, ConverterParameter=STEP}"
                                      Style="{StaticResource Toggle.Switch}"
                                      Margin="0 1 0 1">
                        </ToggleButton>
                        <ToggleButton Tag="VISION"
                                      Content="VISION"
                                      Grid.Row="4"
                                      Command="{Binding SetTabCommand}"
                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                      IsChecked="{Binding SelectedTabKey, Converter={StaticResource KeyEquals}, ConverterParameter=VISION}"
                                      Style="{StaticResource Toggle.Switch}"
                                      Margin="0 1 0 1">
                            
                        </ToggleButton>
                        <ToggleButton Tag="CALIBRATION"
                                       Content="CALIBRATION"
                                       Grid.Row="4"
                                       Command="{Binding SetTabCommand}"
                                       CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"
                                       IsChecked="{Binding SelectedTabKey, Converter={StaticResource KeyEquals}, ConverterParameter=CALIBRATION}"
                                      Style="{StaticResource Toggle.Switch}"
                                       Margin="0 1 0 1">

                        </ToggleButton>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--LOG LIST-->
                <ColumnDefinition Width="Auto"/>
                <!--INIT/RUN/STOP/RESET BUTTON-->
            </Grid.ColumnDefinitions>

            <WrapPanel Orientation="Vertical" Grid.Column="0">

                <Button 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Left" 
                        IsHitTestVisible="False" 
                        Content="LOG" 
                        FontSize="18"
                        Margin="1"
                        />
                <RichTextBox x:Name="tbLogView"
                             FontSize="12"  
                             HorizontalAlignment="Stretch"
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             IsReadOnly="True"
                             Height="150" Margin="1">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="{Binding LogMessages}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </WrapPanel>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"  VerticalAlignment="Stretch" Margin="1 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="INITIALIZE" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(ALL HOME)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" VerticalAlignment="Stretch" Margin="0 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="시 작" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(START)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="2" Grid.Row="0" VerticalAlignment="Stretch" Margin="0 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="정 지" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(STOP)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3" Grid.Row="0" VerticalAlignment="Stretch" Margin="0 1 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="리 셋" FontSize="18" TextAlignment="Center"/>
                        <TextBlock Text="(RESET)" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch" Margin="0 0 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="공정 Step 초기화" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3" Grid.Row="1"  VerticalAlignment="Stretch" Margin="0 0 1 1">
                    <StackPanel Orientation="Vertical" MinWidth="100">
                        <TextBlock Text="최근 에러 보기" FontSize="18" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
