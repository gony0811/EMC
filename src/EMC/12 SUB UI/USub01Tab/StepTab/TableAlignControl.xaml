<UserControl x:Class="EMC.TableAlignControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EMC"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/01 SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid local:GridHelper.Columns="0.15*, 1*, 1*">
        <Border Style="{StaticResource HeaderCell}">
            <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <ItemsControl ItemsSource="{Binding AxisOffsetList}" Grid.Column="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Left" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Border Style="{StaticResource Cell}">
                            <TextBlock Text="{Binding OffsetAxis}"  FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <Border Style="{StaticResource  Cell}" >
                            <local:NumericUpDown Minimum="{Binding Minimum}"
                                                 Maximum="{Binding Maximum}"
                                                 Step="1"
                                                 Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="100"
                                                 ButtonBackground="Gray"
                                                 ButtonForeground="White"
                                                 IsReadOnly="True"
                                                 >
                                
                            </local:NumericUpDown>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        
        <Grid Grid.Column="2" local:GridHelper.Columns="1*, 1*, 1*, 0.6*" local:GridHelper.Rows="Auto, 1*" 
              DataContext="{Binding AlignPositionCheck}">
            
            <Border Style="{StaticResource HeaderCell}" Grid.RowSpan="2">
                <TextBlock Text="Align Position Check" VerticalAlignment="Center" TextAlignment="Center"/>
            </Border>
            <Border Style="{StaticResource Cell}" Grid.Column="1" Grid.Row="0">
                <TextBlock Text="Remain Count" FontSize="12" TextAlignment="Center"></TextBlock>
            </Border>

            <Border Style="{StaticResource Cell}" Grid.Column="1" Grid.Row="1">
                <TextBlock Text="{Binding RemainCount}"></TextBlock>
            </Border>

            <Border Style="{StaticResource Cell}" Grid.Column="2" Grid.Row="0">
                <TextBlock Text="Set Count" FontSize="12" TextAlignment="Center"></TextBlock>
            </Border>

            <Border Style="{StaticResource Cell}" Grid.Column="2" Grid.Row="1">
                <local:NumericUpDown Minimum="{Binding Minimum}"
                     Maximum="{Binding Maximum}"
                     Step="1"
                     Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="100"
                     ButtonBackground="Gray"
                     ButtonForeground="White"
                     IsReadOnly="True"/>
            </Border>
            <Border Style="{StaticResource Cell}" Grid.Column="3" Grid.RowSpan="2">
                <Button Content="RESET"></Button>    
            </Border>
            

        </Grid>
    </Grid>
</UserControl>
