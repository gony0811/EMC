<UserControl x:Class="EMC.AutoTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMC"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/01 SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <GroupBox Header="Run Information" Style="{StaticResource GroupBox.CenterHeader}" Margin="4">
                
                <!-- 3 Columns , 6 Rows  -->
                <Grid local:GridHelper.Columns="Auto, 1*, 1*, 1*, 1*" 
                      local:GridHelper.Rows="1*, 1*, 1*, 1*, 1*, 1*" 
                      DataContext="{Binding RunInformation}"
                      >
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="OperatorID"></TextBlock>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Lot Size"></TextBlock>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="WaferSize"></TextBlock>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="3" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Die Carrier"></TextBlock>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="4" Grid.RowSpan="4" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Die Size"  VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4"  Style="{StaticResource Cell}">
                        <TextBlock Text="{Binding OperatorId}"  TextAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4"  Style="{StaticResource Cell}">
                        <TextBlock Text="{Binding LotId}"  TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4"  Style="{StaticResource Cell}">
                        <TextBlock Text="{Binding WaferSize}" TextAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Die 수: "></TextBlock>
                            <TextBlock Text="{Binding DieCarrier}"></TextBlock>
                            <TextBlock Text="개"></TextBlock>
                        </StackPanel>
                        
                    </Border>

                    <Border Grid.Column="1" Grid.Row="4" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Top" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="5" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Bottom" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="4" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Thickness" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="5" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Thickness" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="2" Grid.Row="4" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding DieTopSize}" ></TextBlock>
                            <TextBlock Text="x"></TextBlock>
                            <TextBlock Text="{Binding DieTopSize}" ></TextBlock>
                            <TextBlock Text=" mm" ></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="4" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding DieTopThickness}"></TextBlock>
                            <TextBlock Text=" um"></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="5" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding DieBottomSize}"></TextBlock>
                            <TextBlock Text="x"></TextBlock>
                            <TextBlock Text="{Binding DieBottomSize}"></TextBlock>
                            <TextBlock Text=" mm"></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="5" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding DieBottomThickness}"></TextBlock>
                            <TextBlock Text=" um"></TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

            </GroupBox>
            <GroupBox Header="Running Step" Grid.Row="1" Style="{StaticResource GroupBox.CenterHeader}" Margin="4">
                <Grid local:GridHelper.Columns="1*, 1*, 1*, 1*, 1*" 
                      local:GridHelper.Rows="Auto, 1*" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <TextBlock Text="Step▼" Foreground="Red" TextAlignment="Center"  Grid.Column="0" Grid.Row="0"></TextBlock>
                    <Border Background="Yellow" Width="100" Height="100" Margin="4 0 0 0" Grid.Column="0" Grid.Row="1"></Border>
                    <Border Background="Green"  Width="100" Height="100" Margin="4 0 0 0" Grid.Column="1" Grid.Row="1" ></Border>
                    <Border Background="Blue"  Width="100" Height="100" Margin="4 0 0 0" Grid.Column="2" Grid.Row="1"></Border>
                    <Border Background="Purple"  Width="100" Height="100" Margin="4 0 0 0" Grid.Column="3" Grid.Row="1"></Border>
                    <Border Background="White"  Width="100" Height="100" Margin="4 0 0 0" Grid.Column="4" Grid.Row="1"></Border>
                </Grid>
                
            </GroupBox>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <GroupBox Header="Running Status" Style="{StaticResource GroupBox.CenterHeader}" Margin="4">
                <Grid local:GridHelper.Columns="1*, 1*, 1*, 1*"
                      local:GridHelper.Rows="1*, 1*, 1*, 1*, 1*, 1*" 
                      VerticalAlignment="Center">

                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="실행" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="진행도" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="0" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Start / End" TextAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource Cell}">
                        <Button Content="Running" Command="{Binding RunningCommand}" Margin="4" />
                    </Border>
                    <Border Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" Style="{StaticResource Cell}">
                        <ProgressBar Height="20" Margin="4"></ProgressBar>
                    </Border>
                    <Border Grid.Column="3" Grid.Row="1" Style="{StaticResource Cell}">
                        <local:TimeRange DataContext="{Binding RunningStatus.RunningTimeRange}" Margin="4" />
                    </Border>

                    <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource Cell}">
                        <Button Content="Loading" Command="{Binding LoadingCommand}" Margin="4"/>
                    </Border>
                    <Border Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="2" Style="{StaticResource Cell}">
                        <ProgressBar Height="20" Margin="4"></ProgressBar>
                    </Border>
                    <Border Grid.Column="3" Grid.Row="2" Style="{StaticResource Cell}">
                        <local:TimeRange DataContext="{Binding RunningStatus.LoadingTimeRange}" Margin="4"/>
                    </Border>
                    <Border Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="3" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Tact Time" TextAlignment="Center"/>
                    </Border>
                    <Border Grid.ColumnSpan="2" Grid.Column="2" Grid.Row="3" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="0"></TextBlock>
                            <TextBlock Text=" UPH"></TextBlock>
                        </StackPanel>
                    </Border>

                    <Border  Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="4" Style="{StaticResource HeaderCell}">
                        <TextBlock Text="Bonding Accuracy" TextAlignment="Center"/>
                    </Border>
                    <Border  Grid.ColumnSpan="2" Grid.Column="2" Grid.Row="4" Style="{StaticResource Cell}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="+/- "></TextBlock>
                            <TextBlock Text="0"></TextBlock>
                            <TextBlock Text=" nm"></TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Grid.ColumnSpan="4" Grid.Row="5" Style="{StaticResource Cell}">
                        <Button Content="실시간 Auccracy Data 보기"></Button>
                    </Border>
                    
                </Grid>
            </GroupBox>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                <Button Content="INITIAL" Width="120" Height="80"></Button>
                <Button Content="START" Width="120" Height="80"></Button>
                <Button Content="STOP" Width="120" Height="80"></Button>
                <Button Content="RESET" Width="120" Height="80"></Button>
            </StackPanel>
            
        </Grid>
    </Grid>
</UserControl>
