<UserControl x:Class="EMC.StepSequence"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EMC"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/01 SYSTEM/Common/Styles/DefaultResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <!-- Step Index Header -->
        <Border Style="{StaticResource HeaderCell}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Step " FontWeight="Bold"/>
                <TextBlock Text="{Binding StepIndex}" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Sequence List -->
        <ItemsControl ItemsSource="{Binding SequenceList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource Cell}">
                        <Grid local:GridHelper.Columns="Auto, 2*, 1*" >
                            <CheckBox IsChecked="{Binding IsSuccess}" IsEnabled="False" IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <!-- Sequence Name -->
                            <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" Margin="10 0 0 0"/>

                            <!-- Duration -->
                            <Border BorderThickness="1 0 0 0" BorderBrush="DarkGray"  Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Duration}" Margin="10 0 0 0"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>