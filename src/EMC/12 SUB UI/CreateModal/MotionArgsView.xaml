<UserControl x:Class="EMC.MotionArgsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="5">
        <TextBlock Text="IP" />
        <TextBox Text="{Binding Ip}" Margin="0 5"/>

        <TextBlock Text="Port" />
        <TextBox Text="{Binding Port}" Margin="0 5"/>
    </StackPanel>

</UserControl>
