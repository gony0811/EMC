<local:DialogWindowBase x:Class="EMC.ParameterCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMC"
        mc:Ignorable="d"
        Title="{Binding Title}" ShowInTaskbar="False" ResizeMode="NoResize">
    
    <Border Padding="16">
        <StackPanel>
            <TextBlock Text="파라미터 이름" Margin="0,0,0,6" Foreground="White"/>
            <TextBox Text="{Binding Value.Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="현재 값" Margin="0,0,0,6" />
            <TextBox Text="{Binding Value.Value, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="최소 값" Margin="0,0,0,6" />
            <TextBox Text="{Binding Value.Minimum, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="최대 값" Margin="0,0,0,6" />
            <TextBox Text="{Binding Value.Maximum, UpdateSourceTrigger=PropertyChanged}" 
                     local:NumericTextBox.IsEnabled="True"
                     local:NumericTextBox.AllowDecimal="True"
                     local:NumericTextBox.AllowNegative="True"/>

            <TextBlock Text="값 타입" Margin="12,12,0,6"/>
            <ComboBox ItemsSource="{Binding ValueTypes}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding Value.ValueTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock Text="단위" Margin="12,12,0,6"/>
            <ComboBox ItemsSource="{Binding Units}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding Value.UnitId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="저장" Width="80" Command="{Binding OkCommand}" Margin="0,0,5,0"></Button>
                <Button Content="취소"  Width="80" Command="{Binding CancelCommand}"/>
            </StackPanel>
            
        </StackPanel>
    </Border>
</local:DialogWindowBase>
