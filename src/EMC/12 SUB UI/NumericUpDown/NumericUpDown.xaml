<UserControl x:Class="EMC.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Name="root"
             Height="28" Width="100">
    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#444" Background="#1E1E2F" Padding="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
            </Grid.ColumnDefinitions>

            <!-- 숫자 표시 (직접 입력 불가) -->
            <TextBox Grid.Column="0"
                     Text="{Binding Value, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="{Binding FontSize, ElementName=root}"
                     HorizontalContentAlignment="Right"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="White"
                     IsReadOnly="{Binding IsReadOnly, ElementName=root}"
                     VerticalContentAlignment="Center"
                     />

            <!-- 증감 버튼 영역 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ▲ 증가 -->
                <Button Grid.Row="0" Content="▲"
                        FontSize="10"
                        Background="{Binding ButtonBackground, ElementName=root}"
                        Foreground="{Binding ButtonForeground, ElementName=root}"
                        BorderBrush="{Binding ButtonBorderBrush, ElementName=root}"
                        BorderThickness="0"
                        Padding="0"
                        Click="Increase_Click"/>

                <!-- ▼ 감소 -->
                <Button Grid.Row="1" Content="▼"
                        FontSize="10"
                        Background="{Binding ButtonBackground, ElementName=root}"
                        Foreground="{Binding ButtonForeground, ElementName=root}"
                        BorderBrush="{Binding ButtonBorderBrush, ElementName=root}"
                        BorderThickness="0"
                        Padding="0"
                        Click="Decrease_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
